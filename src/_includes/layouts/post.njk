		<p role="text">{{ helpers.getReadingTime(content) }}
			minute read</p>
	</div>

	{% endset %}
	{% block content %}
		<main id="main-content" class="posts" tabindex="-1">
			<div class="[ post__intro ] [ pad-before-xlg pad-after ]">
				<div class="[ wrapper wrapper-sm ] [ pad-before ]">
					{% include "partials/components/intro.njk" %}
				</div>
			</div>

			<article class="[ post__body-cont ] [ h-entry ] [ pad-after-xlg ]">
				<div class="[ post__body ] [ wrapper wrapper-sm ] [ pad-around-lg ] [ sf-flow ] [ e-content ] [ h6 ]">
					{{ content | safe }}
				</div>
			</article>
		</main>
	{% endblock %}

	{{ content | safe }}
</div>
